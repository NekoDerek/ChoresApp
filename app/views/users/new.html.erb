        <h1 align="center">Sign Up!</h1>

 <%= form_for User.create, :html => {:class => "form-horizontal center" ,:multipart => true} do |f| %>
  <% if @user.errors.any? %>
  <div class="flash-alert alert alert-danger" >

    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this account from being created:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <% end %>
    <div class="form-group">
        <%= f.label :name, "Name:", class: "col-md-4 control-label" %>
        <div class="col-md-4">
          <%= f.text_field :name, class: "form-control" %>
        </div>
     </div>
     <div class="form-group">
        <%= f.label :email, "Email:", class: "col-md-4 control-label" %>
        <div class="col-md-4">
          <%= f.text_field :email, class: "form-control" %>
        </div>
     </div>

     <div class="form-group">
        <%= f.label :phone, "Phone Number:", class: "col-md-4 control-label" %>
        <div class="col-md-4">
          <%= f.text_field :phone, class: "form-control" %>
        </div>
    </div>

     <div class="form-group">
        <%= f.label :password, "Password", class: "col-md-4 control-label" %>
        <div class="col-md-4">
          <%= f.password_field :password, class: "form-control" %>
        </div>
    </div>

     <div class="form-group">
        <%= f.label :password_confirmation, "Password Confirmation:", class: "col-md-4 control-label" %>
        <div class="col-md-4">
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
    </div>
  
     <div class="form-group">
        <%= f.label :photo, "Picture:", class: "col-md-4 control-label" %>
        <div class="col-md-4">
          <%= f.file_field :photo, class: "form-control" %>
        </div>
    </div>

<div class="buttonHolder">
  <input value="Submit" title="Submit" type="submit" id="btn_s" class="btn btn-info"> 
</div>
<% if notice != nil %>
<p id="notice">
  <%= notice %>
</p>
<% end %>
<% end %>